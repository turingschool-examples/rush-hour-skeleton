<section class="center-table">
  <h1>Site events for <%= @source.identifier %></h1>
 
 
  <h2>Events:</h2>
   <p>
   <% if @source.events.empty? %>
     You have no events!
   <% else %>
   <ol>
     <% @source.events.each do |key, val| %>
       <li><a href="/sources/<%= @source.identifier %>/events/<%= key %>"><%= key %>: <%= val %></a></li>
     <% end %>
   <% end %>
   </ol>
   </p>

 </section>
