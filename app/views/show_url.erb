<div id="sources">
  <div class='col-md-12 navbar navbar-default navbar-static-top navbar-inverse'>
    <a href='/' class='navbar-brand'>Rush Hour</a>
    <ul class='nav navbar-nav navbar-right'>
      <li><a href = "https://www.youtube.com/watch?v=ZFq_TFyhzmo">Full Movie</a></li>
      <li><a href = "https://www.redbubble.com/shop/jackie+chan">Store</a></li>
      <li class='dropwdown'>
        <a href = '#' class='dropdown-toggle' data-toggle='dropdown'>Events
        <span class="caret"></span></a>
        <ul class='dropdown-menu'>
          <% @events.each do |event| %>
            <li><a href="/sources/<%= @client.identifier %>/events/<%= event %>"><%= event %></a></li>
          <% end %>
        </ul>
      </li>
    </ul>
    <form class="navbar-form" role="search" action="/redirect" method="get">
			<div class="input-group">
				<input type="text" class="form-control" placeholder="Search" name="search-id">
				<span class="input-group-btn">
					<button type="submit" class="btn btn-default">
						<span class="glyphicon glyphicon-search">
							<span class="sr-only">Search</span>
						</span>
					</button>
				</span>
			</div>
		</form>
  </div>
</div>

<h1 class="title"> <%= @url.root_url + @url.path %> </h1>

<table class="table-center">
  <caption class="back"><a href="/sources/<%= @client.identifier %>"><<</a></caption>
  <tr>
    <th>Statistic</th>
    <th>Value</th>
  </tr>
  <tr>
    <td>Max Response Time</td>
    <td class="max-response"><%= @url.max_response_time %></td>
  </tr>
  <tr>
    <td>Min Response Time</td>
    <td class="min-response"><%= @url.min_response_time %></td>
  </tr>
  <tr>
    <td>Response Times</td>
    <td class="all-response"><%= @url.response_times_desc.join(", ") %></td>
  </tr>
  <tr>
    <td>Average Response Time</td>
    <td class="avg-response"><%= @url.average_response_time %></td>
  </tr>
  <tr>
    <td>List of Http Verbs</td>
    <td class="all-verbs"><%= @url.all_http_verbs.join(", ") %></td>
  </tr>
  <tr>
    <td>Top Three Referrers</td>
    <td>
      <% @url.top_three_referrals.each do |r| %>
      <table class="mini-table">
        <tr><td><%=r%></td></tr>
      </table>
      <% end %>
    </td>
  </tr>
  <tr>
    <td> Top Three Agents </td>
    <td class="agents"><%= @url.top_three_agents.join(", ")%></td>
  </tr>

</table>
