<br/>
<div class="container">
  <table class="striped highlight responsive-table bordered centered">
    <thead>
      <tr>
        <th data-field="hour">Hour</th>
        <th data-field="views">Times Requested</th>
      </tr>
    </thead>

    <tbody>
      <% hours.each do |k, v| %>
      <tr>
        <td><%= k %></td>
        <td><%= v %></td>
      </tr>
      <% end %>
      <tr>
        <td>24-Hour Total</td>
        <td><%= hours.values.reduce(:+) %></td>
      </tr>
    </tbody>
  </table>
</div>
