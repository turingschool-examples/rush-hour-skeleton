<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h1><%= @relative_path  %> page data</h1>
    </div>
</div>
<!-- /.row -->

<!-- Page Features -->
<div class="row text-center">

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    Fastest Response Time
                  </th>
                  <th>
                    Average Response Time
                  </th>
                  <th>
                    Slowest Response Time
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                    <span class="label label-success label-as-badge"><%= @fastest_response_time %></span>
                  </td>
                  <td>
                    <span class="label label-primary label-as-badge "><%= @average_response_time %></span>
                  </td>
                  <td>
                    <span class="label label-danger label-as-badge"><%= @slowest_response_time %></span>
                  </td>
                </tr>
              </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    HTTP Verbs
                  </th>
                  <th>
                    #
                  </th>
                </tr>
              </thead>
              <tbody>
              <% @http_verbs.each do |pair| %>
                <tr>
                  <td>
                    <%= pair[0].verb %>
                  </td>
                  <td>
                    <span class="label label-primary label-as-badge"><%= pair[1] %></span>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    Top Referrers
                  </th>
                  <th>
                    #
                  </th>
                </tr>
              </thead>
              <tbody>
              <% @top_referrers.each do |pair| %>
                  <tr>
                    <td>
                      <%= pair[0].path %>
                    </td>
                    <td>
                      <span class="label label-primary label-as-badge"><%= pair[1] %></span>
                    </td>
                  </tr>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th colspan="2">
                    Top User Agents
                  </th>
                </tr>
              </thead>
              <tbody>
              <tr>
                <th>Browsers</th>
                <th>#</th>
              </tr>
              <% @top_browsers.each do |pair| %>

                  <tr>
                    <td>
                      <%= pair[0].name %>
                    </td>
                    <td>
                      <span class="label label-primary label-as-badge"><%= pair[1] %></span>
                    </td>
                  </tr>
              <% end %>
              <tr>
                <th>Platforms</th>
                <th>#</th>
              </tr>
              <% @top_platforms.each do |pair| %>

                  <tr>
                    <td>
                      <%= pair[0].name %>
                    </td>
                    <td>
                      <span class="label label-primary label-as-badge"><%= pair[1] %></span>
                    </td>
                  </tr>
              <% end %>

              </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.row -->
