<div class="jumbo-adjust jumbotron container">
  <h1 class="header-adjust"><%= @event_name %> times for <%= @client.identifier.capitalize %></h1>

  <div>
    <table class="table table-hover table-bordered table-condensed">
      <th>Hour:</th>
      <th>Number of occurrences:</th>
      <% @hours.each do |hour, event_occurrence| %>
      <tr>
        <td><%= hour %>:00</td>
        <td><%= event_occurrence %></td>
      </tr>
      <% end %>
    </table>
      <a href="/sources/<%= @client.identifier %>" class="btn btn-success">back</a>
  </div>
  

</div>
