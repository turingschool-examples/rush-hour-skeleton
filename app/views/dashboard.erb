<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Hello, <%= "#{@identifier}" %></h3>
    </div>
</div>
<!-- /.row -->

<!-- Page Features -->
<div class="row text-center">

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    #
                  </th>
                  <th>
                    Visited Urls
                  </th>
                </tr>
              </thead>
              <tbody>


                  <% if @sorted_urls.blank? %>
                  <tr>
                    <td>
                    </td>
                    <td>
                      No URLs visited
                    </td>
                  </tr>
                  <% else %>
                    <% count = 1 %>
                    <% @sorted_urls.each do |pair| %>
                      <tr>
                        <td>
                          <%= count %>.
                        </td>
                        <td>
                          <a href="<%= pair[0].path %>"><%= pair[0].path %></a>
                        </td>
                      </tr>
                      <% count += 1 %>
                    <% end %>
                  <% end %>
              </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    Visits per Browser
                  </th>
                </tr>
              </thead>
              <tbody>
              <% @browsers.each do |pair| %>
                <tr>
                  <td>
                    <%= pair[0].name %> <span class="badge"> <%= pair[1] %> </span>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    Visits per Operating System
                  </th>
                </tr>
              </thead>
              <tbody>
              <% @platforms.each do |pair| %>
                <tr>
                  <td>
                    <%= pair[0].name %> <span class="badge"> <%= pair[1] %> </span>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    Visits per Screen Resolution
                  </th>
                </tr>
              </thead>
              <tbody>
              <% @screens.each do |pair| %>
                <tr>
                  <td>
                    <%= pair[0][0] %>x<%= pair[0][1] %> <span class="badge"><%= pair[1] %> </span>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>

</div>
<!-- /.row -->

<div class="row text-center">
  <div class="col-md-6 col-sm-12 hero-feature">
      <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>
                  #
                </th>
                <th>
                  URL
                </th>
                <th>
                  Average Response Time
                </th>
              </tr>
            </thead>
            <tbody>
            <% count = 1 %>
            <% @response_times.each do |pair| %>
                <tr>
                  <td>
                    <%= count %>.
                  </td>
                  <td>
                    <%= pair[0].path %>
                  </td>
                  <td>
                  <span class="badge"> <%= pair[1].to_i %> ms </span>
                  </td>
                </tr>
                <% count += 1 %>
            <% end %>
            </tbody>
          </table>
      </div>
  </div>
</div>
<!-- /.row -->
