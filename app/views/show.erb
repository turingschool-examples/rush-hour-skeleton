<div class="page-header">
  <h1><%= identifier %> Site Data</h1>
</div>

<div class="row">
  <div class="col-md-3" id="urls">
    <h3>Requested URLs</h3>
    <ol>
      <% addresses.each do |address, count|%>
        <li><%= "#{address}: #{count} visits" %></li>
      <% end %>
    </ol>
  </div>

  <div class="col-md-3" id="browsers">
    <h3>Web Browser Breakdown</h3>
    <ol>
      <% browsers.each do |browser, count|%>
        <li><%= "#{browser}: #{count}" %></li>
      <% end %>
    </ol>
  </div>

  <div class="col-md-3" id="os">
    <h3>OS Breakdown</h3>
    <ol>
      <% os_platforms.each do |os_platform, count|%>
        <li><%= "#{os_platform}: #{count}" %></li>
      <% end %>
    </ol>
  </div>

  <div class="col-md-3" id="screen_resolutions">
    <h3>Screen Resolutions</h3>
    <ul>
      <% screen_resolutions.each do |resolution|%>
        <li><%= resolution %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="col-md-4" id="response_times">
  <h3>URL Average Response Times</h3>
  <ol>
    <% url_response_times.each do |address, time, relative_path|%>
      <li><a href="/sources/<%="#{relative_path}"%>"><%= "#{address}"%></a><%=": #{time}ms" %></li>
    <% end %>
  </ol>
</div>

<div class="col-md-8" id="events_link">
  <h3><a href="/sources/<%="#{identifier.downcase}"%>/events">Events</a></h3>
</div>
