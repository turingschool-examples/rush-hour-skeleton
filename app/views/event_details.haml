%h1
  = @app.identifier.capitalize
  Events Details:
  = @event

%h3#total-request
  Total Requests:
  = @event_payloads.count

%h3 Hour by Hour Breakdown

%table
  %tr
    %th Hour
    %th Requests
  -(0..23).to_a.each do |hour|
    %tr
      %td
        = "#{hour}:00 - #{hour + 1}:00"
      %td.request-count
        = @event_payloads.requests_by_hour(hour)
