<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3><%= "#{@identifier}" %>'s Event Index'</h3>
    </div>
</div>
<!-- /.row -->

<!-- Page Features -->
<div class="row text-center">

    <div class="col-md-3 col-sm-6 hero-feature">
        <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>
                    All events
                  </th>
                  <th>
                    #
                  </th>
                </tr>
              </thead>
              <tbody>


                  </% if @sorted_urls.blank? %>
                  <tr>
                    <td>
                    </td>
                    <td>
                      No URLs visited
                    </td>
                  </tr>
                  <% else %>
                    </% count = 1 %>
                    </% @sorted_urls.each do |pair| %>
                      <tr>
                        <td>
                          </%= count %>.
                        </td>
                        <td>
                          </% relative_path = pair[0].path.clone %>
                          </% relative_path.slice!(@site.root_url) %>
                          <a href="/sources/</%= "#{@identifier}" %>/urls</%= relative_path %>"></%= pair[0].path %></a>
                        </td>
                      </tr>
                      </% count += 1 %>
                    </% end %>
                  </% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-12 hero-feature">
    <a class="btn btn-block" href="#"> Event Index </a>
  </div>
</div>
<!-- /.row -->
